<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_5sdp"
    android:paddingBottom="@dimen/_5sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:padding="@dimen/_3sdp"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/dummy_placeholder"
        android:id="@+id/iv_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_recieve"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/iv_dp"
        app:layout_constraintWidth_percent=".65"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="wrap"
        android:text=""
        android:id="@+id/tv_recieve"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="@font/avenir_book"
        android:textSize="13sp"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/_0d0925"
        android:background="@drawable/receive_chat_back"/>

</androidx.constraintlayout.widget.ConstraintLayout>